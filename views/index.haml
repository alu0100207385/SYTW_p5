.blurb.bright
  .row
    .col-md-6.col-md-offset-3.text-center
      %h1{:style => "margin-top:-5%"} #{@user}
      %h4 My Short List
      URLs (label)
      %br
      %br
      %ol
        - if (@list.length == 0)
          %p EMPTY LIST
        - else
          - @list.each do |url|
            %li
              #{url.url}
              - if (url.label == '')
                %a{:href=>"/user/index/#{url.id.to_s(Base)}",:target=>"_blank",:title=>"#{url.url}"} (#{url.id.to_s(Base)})
              - else
                %a{:href=>"/user/index/#{url.label}",:target=>"_blank",:title=>"#{url.url}"} (#{url.label})
%div{:style=>"text-align:center"}
  Shorten this:
  %form{:name=> "input" , :action=>"/user/index",:method=>"POST"}
    %label{:for=>"url"}
    %input{:type=>"text",:name=>"url",:id=>"myurl",:autofocus => "",:size=>"50"}
    %input{:type=>"submit",:value=>"Make it"}
    %br
    to &#47;
    %label{:for=>"label"}
    %input{:type=>"text",:name=>"label",:id=>"mylabel",:autofocus=>"",:size=>"15"}
    (opcional)
%br
